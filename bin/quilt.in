export TEXTDOMAIN=quilt

usage()
{

	echo $"Usage: quilt command [-h] ..."
	#echo $"Commands are:" $(
	#	local command
	#	for command in @QUILT@/*
	#	do
	#		if [ -f "$command" -a -x "$command" ]
	#		then
	#			echo "${command#@QUILT@/}"
	#		fi
	#	done \
	#	| sort
	#)
	echo $"Commands are:"
	quilt_commands \
	| sort \
	| column | column -t \
	| sed -e 's/^/\t/'
	exit 1
}

quilt_commands()
{
	local command
	for command in @QUILT@/*
	do
		if [ -f "$command" -a -x "$command" ]
		then
			echo ${command##@QUILT@/}
		fi
	done
}

for arg in "$@"
do
	case $arg in
	[^-]*)
		if [ -z "$command" ]
		then
			command="$arg"
		else
			args[${#args[@]}]="$arg"
		fi ;;
	*)
		args[${#args[@]}]="$arg" ;;
	esac
done

if ! [ -f "@QUILT@/$command" -a -x "@QUILT@/$command" ]
then
	if [ -n "$command" ]
	then
		for arg in $(quilt_commands)
		do
			case "$arg" in
			$command*)
				commands[${#commands[@]}]="$arg"
				;;
			esac
		done
	fi

	if [ ${#commands[@]} -eq 0 ]
	then
		usage
	elif [ ${#commands[@]} -eq 1 ]
	then
		command="${commands[0]}"
		unset commands
	else
		echo "$command :" "${commands[@]}" >&2
		exit 1
	fi
fi

set -- "${args[@]}"
unset arg args

#. @QUILT@/$command
bash -c ". @QUILT@/$command" "quilt ${command##*/}" "$@"
