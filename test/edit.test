$ rm -rf d
$ mkdir -p d/patches d/subdir
$ cd d

$ cat > editor
< #! /bin/sh
< echo Editing $1
< sed -e 's:foo:bar:' $1 > $1.new
< mv $1.new $1
$ chmod +x editor
$ export EDITOR=%PWD/editor

$ quilt new patch
> Patch patches/patch is now on top
$ cd subdir
$ echo foo > foo
$ quilt edit foo
> File subdir/foo added to patch ../patches/patch
> Editing subdir/foo

$ cat foo
> bar

$ cd ../..
$ rm -rf d
