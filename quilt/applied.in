# Read in library functions
if [ "$(type -t patch_file_name)" != function ]
then
	if ! [ -r @LIB@/patchfns ]
	then
		echo "Cannot read library @LIB@/patchfns" >&2
		exit 1
	fi
	. @LIB@/patchfns
fi

usage()
{
	echo "Usage: quilt applied [patch]"
	if [ x$1 = x-h ]
	then
		cat <<EOF

Print a list of applied patches, or all patches up to and including the
specified patch in the file series.

EOF
		exit 0
	else
		exit 1
	fi
}

options=`getopt -o h -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

while true
do
	case "$1" in
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -gt 1 ]
then
	usage
elif [ $# -eq 1 ]
then
	patch=$(stripit $1)
else
	patch=$(top_patch)
fi

if [ -n "$patch" ]
then
	patches_before $patch
	echo $patch
fi
