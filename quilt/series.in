# Read in library functions
if [ "$(type -t patch_file_name)" != function ]
then
	if ! [ -r @SCRIPTS@/patchfns ]
	then
		echo "Cannot read library @SCRIPTS@/patchfns" >&2
		exit 1
	fi
	. @SCRIPTS@/patchfns
fi

usage()
{
	echo $"Usage: quilt series [-v]"
	if [ x$1 = x-h ]
	then
		echo $"

Print the names of all patches in the series file.

-n	Print patch file names instead patch names.

-v	Verbose, more user friendly output.

"
		exit 0
	else
		exit 1
	fi
}

cat_patches()
{
	local prefix=$1
	shift
	local patch

	for patch in "$@"
	do
		[ -n "$opt_filenames" ] && patch=$(patch_file_name $patch)
		echo "$prefix$patch"
	done
}

options=`getopt -o nvh -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

opt_what=here

while true
do
	case "$1" in
	-n)
		opt_filenames=1
		shift ;;
	-v)
		opt_verbose=1
		shift ;;
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -ne 0 ]
then
	usage
fi

if [ -n "$opt_verbose" ]
then
	top=$(top_patch)
	cat_patches "+ " $(patches_before $top)
	[ -n "$top" ] && cat_patches "= " $top
	cat_patches "  " $(patches_after $top)
else
	cat_series
fi
